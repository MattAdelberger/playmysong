<section class="enter-code group">
<%= form_tag event_lookup_path, :class => 'group' do %>

<% if session[:audience_member_id].blank? %>
  <legend>Enter your email</legend>
  <%= text_field_tag :email %>
<% end %>

<legend>Enter event code</legend>
  <%= text_field_tag :event_code %>
  <%= submit_tag 'Start Requesting Now' %>
<% end %>

<h1><%= session[:audience_member_id] %></h1>

<ul>
<li><%= link_to "Log In", new_user_session_path %> <a href="/users/sign_up">Sign Up</a></li>
</ul>
</section>
