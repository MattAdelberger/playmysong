<section class="devise-form group">
	<h1>Request Songs Now</h1>
<%= form_tag event_lookup_path, :class => 'group' do %>

<% if session[:audience_member_id].blank? %>
  <%= email_field_tag :email, nil, :placeholder => 'Email Address' %>
<% end %>

  <%= text_field_tag :event_code, nil, :placeholder => 'Event Code' %>
  <%= submit_tag 'Start Requesting Now' %>
<% end %>


<%= link_to "Log In", new_user_session_path %> 
	<a href="/users/sign_up">Sign Up</a>

</section>
