<section class="devise-form">
	
<h1>Sign up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.text_field :artist, :autofocus => true, :placeholder => 'Artist Name' %></div>

  <div>
  <%= f.email_field :email, :placeholder => 'Email Address' %></div>

  <div>
  <%= f.password_field :password, :placeholder => 'Password' %></div>

  <div>
  <%= f.password_field :password_confirmation, :placeholder => 'Confirm Password' %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
</section>
